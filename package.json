{
  "name": "opstooling-js",
  "description": "opstooling-js",
  "version": "0.0.0",
  "author": "Parity <admin@parity.io> (https://parity.io)",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "fix": "yarn fix:eslint '{*,**/*}.{cjs,js,ts}' && yarn fix:prettier '{*,**/*}.json'",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write",
    "generate-types": "./src/cli/opstooling-scripts.cjs generate-types --schemas src/schemas --out src/types/generated",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "opstooling-scripts": "./src/cli/opstooling-scripts.cjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@resolritter/tsc-files": "^1.1.4",
    "@types/jest": "^27.5.1",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.24",
    "@types/node-fetch": "^2.6.1",
    "fastify": "^3.29.0",
    "jest": "^28.1.0",
    "opstooling-js-style": "https://github.com/paritytech/opstooling-js-style#6cfdf3caaacd483d330b9ab534625fe33adb26b5",
    "ts-jest": "^28.0.2",
    "tsup": "^5.12.7",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "@octokit/rest": "^18.12.0",
    "async-mutex": "^0.3.2",
    "commander": "^9.3.0",
    "deepdash": "^5.3.9",
    "joi": "^17.6.0",
    "joi-to-typescript": "^4.0.5",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.10",
    "probot": "^12.2.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0"
  }
}
