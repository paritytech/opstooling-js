{
  "name": "@eng-automation/js",
  "description": "Parity EngAutomation common code",
  "version": "0.0.0-updated-via-gh-releases",
  "author": "Parity <admin@parity.io> (https://parity.io)",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "eslint '{*,**/*}.{cjs,js,ts}' && prettier --check '{*,**/*}.json'",
    "fix": "yarn fix:eslint '{*,**/*}.{cjs,js,ts}' && yarn fix:prettier '{*,**/*}.json'",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write",
    "generate-types": "node ./dist/cli/main.js generate-types --schemas dist/schemas --out src/types/generated",
    "prepare": "ts-patch install -s",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts"
  },
  "bin": {
    "opstooling-scripts": "./dist/cli/main.js"
  },
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@eng-automation/js-style": "^3.0.0",
    "@resolritter/tsc-files": "^1.1.4",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.1",
    "@types/node": "^20.12.8",
    "fastify": "^4.26.2",
    "jest": "^29.7.0",
    "prom-client": "^15.1.2",
    "ts-jest": "^29.1.2",
    "ts-patch": "^3.1.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "commander": "^12.0.0",
    "deepdash": "^5.3.9",
    "joi": "^17.13.1",
    "joi-to-typescript": "^4.13.0",
    "lodash": "^4.17.21"
  }
}
