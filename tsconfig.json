{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2021",
    // Node.js LTS 16
    "lib": ["ES2021"],
    // Node.js LTS 16
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
